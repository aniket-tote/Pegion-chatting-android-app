<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".ProfileActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/viewUserImage"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        app:cardCornerRadius="130dp">

        <ImageView
            android:id="@+id/viewUserImageInImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/logoofviewprofile"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/viewUserImage"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/ic_baseline_person_24"
        app:tint="#716e6e" />

    <EditText
        android:id="@+id/viewUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewUserImage"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="90dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/textbox_outline"
        android:clickable="false"
        android:enabled="false"
        android:hint="Enter Your Name"
        android:inputType="textCapWords"
        android:padding="10dp"
        android:textColor="#000"
        android:textColorHint="#808080" />

    <TextView
        android:id="@+id/movetoupdateprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Profile"
        android:fontFamily="@font/arlrdbd"
        android:layout_alignParentBottom="true"
        android:layout_margin="50dp"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#08c"/>

</RelativeLayout>